@{
    ViewBag.Title = "Home Page";
}

    <div class="jumbotron" style="margin-top:100px">

        <form class="form-horizontal" action="/action_page.php">
            <div class="form-group">
                <label class="control-label col-sm-2" for="Number">Enter Number:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="Number" placeholder="Enter Number">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Result">Result:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Result" disabled>
                </div>
            </div>
           
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" class="btn btn-primary" onclick="CalculateFactorial()">Calculate Factorial</button>
                </div>
            </div>
        </form>

    </div>
    <script>
        function CalculateFactorial() {
            debugger;
            var number = document.getElementById("Number").value;
            if (number < 0) {
                alert("Please enter Positive Number");
            }
            else {
                 var url = '@Url.Action("CalculateFactorial", "Home")';
        url = url + "?number=" + number;
        $.ajax({
                type: "POST",
                url: url,

            success: function (response) {

                document.getElementById("Result").value = response;
              },
                error: function () {
                    alert("Error");
                }
            });
            }


    }
    </script>
